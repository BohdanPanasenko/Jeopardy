@model IEnumerable<Jeopardy.Models.User>

<div class="container mt-5">
    <h2>List of users</h2>
    <table class="table table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Name of the user</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="EditUser" asp-route-id="@user.UserId ">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="DeleteUser" asp-route-id="@user.UserId " onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-success" asp-action="CreateUser">Create a new user</a>
</div>