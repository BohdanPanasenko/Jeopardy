@model IEnumerable<Jeopardy.Models.Game>

<div class="container mt-5">
    <h2>List of the games</h2>
    <table class="table table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Name of the game</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.GameTitle</td>
                    <td>@game.GameDescription</td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-action="DeleteGame" asp-route-id="@game.GameId" onclick="return confirm('Are you sure you want to delete this game?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>